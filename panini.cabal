library
  hs-source-dirs: src
  exposed-modules:
    Panini.Elaborator
    Panini.Error
    Panini.Parser
    Panini.Printer
    Panini.REPL
    Panini.SMT
    Panini.Substitution
    Panini.Syntax
    Panini.TypeChecker

  build-depends:
      base ^>=4.16
    , ansi-terminal
    , bytestring
    , containers
    , directory
    , filepath
    , haskeline
    , megaparsec == 9.2.*
    , parser-combinators
    , prettyprinter
    , process
    , text
    , transformers

  default-language: GHC2021
  default-extensions: 
    DataKinds
    DerivingStrategies
    ImportQualifiedPost
    LambdaCase
    OverloadedRecordDot
    ViewPatterns
    PatternSynonyms
  
  ghc-options:
    -Weverything
    -Wno-missing-exported-signatures
    -Wno-missing-import-lists
    -Wno-missing-export-lists
    -Wno-missed-specialisations
    -Wno-all-missed-specialisations
    -Wno-unsafe
    -Wno-safe
    -Wno-missing-safe-haskell-mode
    -Wno-missing-local-signatures
    -Wno-monomorphism-restriction
    -Wno-missing-kind-signatures


executable pan
  main-is: Main.hs
  hs-source-dirs: app
  build-depends:
    , panini
    , base
    , directory
    , filepath
    , haskeline
    , transformers

  default-language: GHC2021
  default-extensions: 
    DataKinds
    ImportQualifiedPost
    LambdaCase
    ViewPatterns
